@model Category

<h2>Edit Category</h2>

@if (!ViewData.ModelState.IsValid)
{
    <p style="color:red">Please fix errors below.</p>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="mb-3">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" style="color:red"></span>
    </div>
    <br />
    <button class="btn btn-primary" type="submit" class="btn btn-outline-primary">Update</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</form>
